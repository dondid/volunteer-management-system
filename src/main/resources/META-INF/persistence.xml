<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="VolunteerPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- Entități -->
        <class>ro.ucv.inf.soa.model.Organization</class>
        <class>ro.ucv.inf.soa.model.Volunteer</class>
        <class>ro.ucv.inf.soa.model.Skill</class>
        <class>ro.ucv.inf.soa.model.VolunteerSkill</class>
        <class>ro.ucv.inf.soa.model.Project</class>
        <class>ro.ucv.inf.soa.model.ProjectSkill</class>
        <class>ro.ucv.inf.soa.model.Assignment</class>
        <class>ro.ucv.inf.soa.model.Attendance</class>
        <class>ro.ucv.inf.soa.model.Certificate</class>
        <class>ro.ucv.inf.soa.model.Event</class>
        <class>ro.ucv.inf.soa.model.EventParticipant</class>
        <class>ro.ucv.inf.soa.model.Feedback</class>

        <properties>
            <!-- Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/volunteer_db?createDatabaseIfNotExist=true&amp;useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="volunteer_user"/>
            <property name="jakarta.persistence.jdbc.password" value="volunteer_pass"/>

            <!-- Hibernate Settings -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>